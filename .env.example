# =================================================================
# PDF Summarization Service 环境配置模板
# 说明: 复制为 .env 并根据环境修改
# =================================================================

# 运行环境
APP_ENV=prod

# API 服务配置
API_HOST=0.0.0.0
API_PORT=8080
API_WORKERS=4
API_DEBUG=false

# 模型配置
MODEL_NAME=Qwen/Qwen3-8B
MODEL_MAX_TOKENS=2048
MODEL_TEMPERATURE=0.3

# vLLM 推理服务
VLLM_API_BASE=http://localhost:8000/v1
VLLM_API_KEY=EMPTY

# PDF 处理配置
MAX_PDF_SIZE_MB=50
MAX_PDF_PAGES=200
CHUNK_SIZE=8000
CHUNK_OVERLAP=500

# 摘要配置
DEFAULT_SUMMARY_LANGUAGE=zh
DEFAULT_MAX_SUMMARY_LENGTH=500
MIN_SUMMARY_LENGTH=100

# 日志配置
LOG_LEVEL=INFO
LOG_DIR=./logs

# CORS 配置
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# 缓存配置 (可选)
CACHE_ENABLED=false
CACHE_TTL_SECONDS=3600
REDIS_HOST=localhost
REDIS_PORT=6379
